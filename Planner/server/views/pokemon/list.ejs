<!-- Main Content -->
<main>
    <div class="container">
        <div class ="row">
            <div class ="col-mid-offset-3 col-md-10">
            <h1><%= title %></h1>
            <br>
            <table class = "table table-bordered table-striped table-hover">
        <tr>
        <th class="text-center col-2">Name</th>
        <th class="text-center col-1">Type1</th>
        <th class="text-center col-1">Type2</th>
        <th class="text-center col-4">Notes</th>
        </tr>
        <% for(let count= 0;count<Pokemonlist.length; count++) { %>
            <tr>
                <td class="text-center col-2"><%= Pokemonlist[count].name %></td>
                <td class="text-center col-1"><%= Pokemonlist[count].type1 %></td>
                <td class="text-center col-1"><%= Pokemonlist[count].type2 %></td>
                <td class="text-center col-4"><%= Pokemonlist[count].notes %></td>
                <td class="text-center col-1">
                  <a href="/pokemon-list/edit/<%= Pokemonlist[count]._id%>"
                    class="btn btn-primary">
                    <i class = "fas fa-pencil-alt"></i>Edit</a>
                </td>
                <td class="text-center col-1">
                  <a href="/pokemon-list/delete/<%= Pokemonlist[count]._id%>"
                    class="btn btn-danger">
                    <i class = "fas fa-trash-alt"></i>Delete</a>
                </td>

            </tr>
        <% } %>
            </table>
        </div>
    </div>
</main>
