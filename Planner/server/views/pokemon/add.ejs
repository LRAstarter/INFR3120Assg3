<div class ="container">
    <div class = "row">
        <div class ="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="NameTextField">Pokemon Name</label>
                    <input type = "text" class = "form-control"
                    id="nameTextField"
                    placeholder="Enter the Pokemon Name"
                    name="name" required>
                </div>
                <div class="form-group">
                    <label for="Type1TextField">First Type</label>
                    <input type = "text" class = "form-control"
                    id="Type1TextField"
                    placeholder="Enter the first type of Pokemon"
                    name="type1" required>
                </div>
                <div class="form-group">
                    <label for="Type2TextField">Second Type</label>
                    <input type = "text" class = "form-control"
                    id="Type2TextField"
                    placeholder="Enter the second type of Pokemon (if none type in N/A)"
                    name="type2" required>
                </div>
                <div class="form-group">
                    <label form="NoteTextField">Extra Notes</label>
                    <textarea type = "text" class = "form-control"
                    id="NoteTextField"
                    placeholder="Any Extra notes go here"
                    name="notes" required></textarea>
                </div>
                <br>
            <button class ="btn-btn-primary" type = "submit">
                <i class = "fas fa-edit"></i>Submit
            </button>

            </form
        </div>
    </div>
</div>

